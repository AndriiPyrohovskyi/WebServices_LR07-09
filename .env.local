# Local Development Environment Variables

# Server Configuration
PORT=8080
HOST=0.0.0.0

# F1 API Configuration
ERGAST_API_BASE_URL=https://api.jolpi.ca/ergast/f1
API_TIMEOUT=10

# Application Settings
APP_NAME=F1 Data API
APP_VERSION=2.0.0
DEBUG=True

# CORS Settings
CORS_ORIGINS=*

# Database Configuration (PostgreSQL)
# For Docker Compose: use service name 'postgres'
# For local development: use 'localhost'
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/f1_db

# Drop and recreate database on startup (use with caution!)
DROP_DB_ON_START=false

# Redis Configuration
# For Docker Compose: use service name 'redis'
# For local development: use 'localhost'
REDIS_URL=redis://localhost:6379/0
